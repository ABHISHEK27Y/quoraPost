<!DOCTYPE html>
<html>
<head>
    <title>REST API Use</title>
   <link href="/design.css" rel="stylesheet">
</head>
<body>
    <h1>Quora Posts</h1>

    <% for(let post of posts){ %>
        <div class="post">
            <h3 class="user">@<%= post.user %></h3>
            <h4 class="content"><%= post.content %></h4><br><br>
            <a href="http://localhost:8080/posts/<%=post.id%>">See in Detail</a>
            <a href="http://localhost:8080/posts/<%=post.id%>/edit">Edit</a>
            <form method="post" action="/posts/<%=post.id%>?_method=DELETE">
                <button>DELETE</button>
            </form>
        </div>
    <% } %>


    <br><br>
    <a href="http://localhost:8080/posts/new" class="new-post-btn">Create New Post</a>

</body>
</html>
